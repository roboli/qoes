<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Phone">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="NumberText">
        <item name="android:textColor">@color/colorNumbers</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="NumberAltern">
        <item name="android:textColor">@color/colorAlterns</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="PhoneBorders">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:color">@color/colorBorders</item>
    </style>
</resources>
